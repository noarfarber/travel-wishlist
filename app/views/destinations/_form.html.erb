<%= form_with(model: destination) do |form| %>
  <% if destination.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(destination.errors.count, "error") %> prohibited this destination from being saved:</h2>
      <ul>
        <% destination.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :location, style: "display: block" %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :depart, style: "display: block" %>
    <%= form.date_field :fromdate, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :return, style: "display: block" %>
    <%= form.date_field :todate, class: "form-control" %>
  </div>

  <div class="mb-3">
    <br/>
    <%= form.submit class: "btn btn-primary" %>
  </div>

<% end %>
